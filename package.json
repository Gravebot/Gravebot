{
  "name": "gravebot",
  "version": "1.4.0",
  "description": "A bot for the chat program Discord",
  "main": "index.js",
  "dependencies": {
    "babel-core": "^6.4.0",
    "babel-preset-es2015-node4": "^2.0.2",
    "babel-preset-stage-1": "^6.3.13",
    "babel-register": "^6.3.13",
    "bluebird": "^3.1.1",
    "body-parser": "^1.14.2",
    "chalk": "^1.1.1",
    "cheerio": "^0.19.0",
    "cleverbot-node": "^0.2.1",
    "discord.js": "^6.0.0",
    "entities": "^1.1.1",
    "express": "^4.13.3",
    "forever": "^0.15.1",
    "gizoogle": "^0.0.6",
    "glob": "^6.0.3",
    "imgflipper": "^1.0.1",
    "jade": "^1.11.0",
    "moment": "^2.11.1",
    "nconf": "^0.8.2",
    "nib": "^1.1.0",
    "node-horseman": "git+https://git@github.com/Gravebot/node-horseman.git#debug-inspector",
    "phantomjs2": "git+https://git@github.com/Gravebot/phantomjs2.git#linux",
    "promise-queue": "^2.2.2",
    "ramda": "^0.19.1",
    "raven": "^0.9.0",
    "request": "^2.67.0",
    "stylus": "^0.53.0",
    "super-error": "^2.0.0",
    "urban": "^0.3.0",
    "wikijs": "^0.1.3",
    "wolfram-alpha": "^0.3.0",
    "youtube-node": "^1.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-istanbul": "^0.5.9",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "eslint": "^1.10.3",
    "eslint-config-busbud": "^0.1.2",
    "eslint-config-semistandard": "^5.0.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-standard": "^1.3.1",
    "jadelint": "^0.3.3",
    "jsonlint": "^1.6.2",
    "mocha": "^2.3.4",
    "mockery": "^1.4.0",
    "nock": "^4.0.0",
    "nodemon": "^1.8.1",
    "sinon": "^1.17.2",
    "stylint": "^1.3.5",
    "stylint-stylish": "^1.2.0"
  },
  "scripts": {
    "dev": "DEBUG=express:*,horseman nodemon ./index.js",
    "heroku": "forever --minUptime 5000 index.js",
    "image": "docker build --rm -t gravebot/gravebot:latest .",
    "lint": "npm run lint-js && npm run lint-styl && npm run lint-jade && npm run lint-json",
    "lint-jade": "jadelint ./web/views",
    "lint-js": "eslint .",
    "lint-json": "find ./data -name \\*.json -type f -maxdepth 1 -exec jsonlint -q {} \\;",
    "lint-styl": "stylint --config ./.stylintrc ./web/styl",
    "mocha": "mocha --compilers js:babel-core/register ./tests/index.js",
    "start": "node index.js",
    "test": "npm run lint && npm run mocha",
    "test-coverage": "npm run lint && babel-node node_modules/.bin/babel-istanbul cover --root ./lib --include-all-sources true node_modules/.bin/_mocha -- ./tests/index.js"
  },
  "engines": {
    "node": ">=4.2.0 <5.0",
    "npm": "2.14.14"
  },
  "babel": {
    "presets": [
      "es2015-node4",
      "stage-1"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gravestorm/Gravebot.git"
  },
  "keywords": [
    "Discord",
    "Bot"
  ],
  "author": "Gravestorm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gravestorm/Gravebot/issues"
  },
  "homepage": "https://github.com/Gravestorm/Gravebot#readme"
}
